{{#each posts as |post|}}

<article class="w-48 flex-grow bg-gray-100 rounded-lg">
    <header class="bg-indigo-200 rounded-t-lg">
        <h2 class="font-serif text-lg font-bold p-3">{{post.title}}</h2>
    </header>
    <body class="">
        <p class="rounded-b-lg p-3 leading-normal">{{post.post}}</p>
    </body>
</article>

{{/each}}