<div class="p-8 grid grid-cols-1 md:grid-cols-3 gap-4 bg-gray-100 grid-rows-2 min-h-screen posts">
    <div class="md:col-start-2 xl:col-start-3">
        <form class="bg-gray-50 rounded-lg shadow signup-form">
            <header class="bg-green-200 rounded-t-lg p-2">
                <h2 class="text-lg">Sign up</h2>
            </header>
            <div class="flex flex-col mb-4 p-2">
                <label for="user_name">User name</label>
                <input type="text" id="user_name" class="border py-2 px-3 text-grey-darkest" />
            </div>
            <div class="flex flex-col mb-4 p-2">
                <label for="email">Email</label>
                <input type="email" id="email" class="border py-2 px-3 text-grey-darkest" />
            </div>
            <div class="flex flex-col mb-4 p-2">
                <label for="password">Password</label>
                <input type="password" id="password" class="border py-2 px-3 text-grey-darkest" />
            </div>

            <div class="p-2">
                <button class="block bg-green-200 hover:bg-teal-dark uppercase text-lg mx-auto p-4 rounded" id="submit"
                    type="submit">Sign up</button>
            </div>

        </form>
    </div>
</div>
