<div class="p-8 grid grid-cols-1 md:grid-cols-3 gap-4 bg-gray-100 grid-rows-2 min-h-screen posts">
    <div class="md:col-start-2">
        <form class="bg-gray-50 rounded-lg shadow login-form">
            <header class="bg-green-200 rounded-t-lg p-2">
                <h2 class="text-lg">Login</h2>
            </header>
            <div class="flex flex-col mb-4 p-2">
                <label for="email">Email</label>
                <input type="text" id="email-login" class="border py-2 px-3 text-grey-darkest" />
            </div>
            <div class="flex flex-col mb-4 p-2">
                <label for="password">Password</label>
                <input type="password" id="password" class="border py-2 px-3 text-grey-darkest" />
            </div>

            <div class="p-2">
                <button class="block bg-green-200 hover:bg-teal-dark uppercase text-lg mx-auto p-4 rounded" id="submit"
                    type="submit">Login</button>
                <a class="text-sm text-blue-700 text-center hover:text-blue-400" href="/signup">Don't have an account? click to signup</a>
            </div>

        </form>
    </div>
</div>
<script src="/login.js"></script>